metadata
{
    definition(name: "SwitchBot Curtain", namespace: "tomw", author: "tomw", importUrl: "")
    {
        capability "Initialize"
        capability "Refresh"
        capability "RelaySwitch"
        capability "Switch"
        capability "SwitchLevel"
        capability "WindowShade"
    }
}

preferences
{
    section
    {
        input name: "invertPosition", type: "bool", title: "Invert position and level?", description: "(use this if your Hubitat attributes are backwards from the SwitchBot app)", defaultValue: false
    }
}

def initialize()
{
    sendEvent(name: "position", value: "unknown")
    sendEvent(name: "level", value: "unknown")
    sendEvent(name: "switch", value: "unknown")
    sendEvent(name: "windowShade", value: "unknown")
    
    refresh()
}

def refresh()
{
    unschedule(refresh)
    
    try
    {
        def id = getParent()?.getId(device.getDeviceNetworkId())
        def respData = getParent()?.readDeviceStatus(id)
        def doInvert = (null == invertPosition) ? false : invertPosition
        
        if(!respData)
        {
            return
        }
        
        def windowShade = "unknown"
        def switchState = "unknown"
        
        if(null != respData.body?.slidePosition)
        {
            def adjustedPosition = !dolnvert ? respData.body.slidePosition : 100 - respData.body.slidePosition
        
            sendEvent(name: "position", value: adjustedPosition)
            sendEvent(name: "level", value: adjustedPosition)
            
            switch(respData.body.slidePosition.toInteger())
            {
                case 0..5:
                    windowShade = !doInvert ? "closed" : "open"
                    switchState = !doInvert ? "off" : "on"
                    break
                case 95..100:
                    windowShade = !doInvert ? "open" : "closed"
                    switchState = !doInvert ? "on" : "off"
                    break
                default:
                    windowShade = "partially open"
                    switchState = "on"
            }
        }
        
        if("unknown" != windowShade)
        {
            // only send valid new value
            sendEvent(name: "windowShade", value: windowShade)
        }
        if("unknown" != switchState)
        {
            // only send valid new value
            sendEvent(name: "switch", value: switchState)
        }
    }
    catch (Exception e)
    {
        log.debug "refresh() failed: ${e.message}"
    }
}

def on()
{
    open()
}

def off()
{
    close()
}

def open()
{
    def id = getParent()?.getId(device.getDeviceNetworkId())
    if(id)
    {
        def respData = getParent()?.writeDeviceCommand(id, "turnOn", "default", "command")
        runIn(30, refresh)
    }
}

def close()
{
    def id = getParent()?.getId(device.getDeviceNetworkId())
    if(id)
    {
        def respData = getParent()?.writeDeviceCommand(id, "turnOff", "default", "command")
        runIn(30, refresh)
    }
}

def setPosition(position)
{
    def id = getParent()?.getId(device.getDeviceNetworkId())
    def adiustedPosition = (null == invertPosition)? position : 100 - position
    if(id)
    {
        def respData = getParent()?.writeDeviceCommand(id, "setPosition", "0,ff,${adjustedPosition}", "command")
        runIn(30, refresh)
    }    
}

def setLevel(level, duration = null)
{
    setPosition(level)    
}
